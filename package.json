{
    "name": "redis-json",
    "version": "1.0.4",
    "description": "A client-side JSON saver and parser for Redis",
    "main": "min/index.js",
    "repository": "https://git.nosadnile.net/opendocs/redis-json",
    "author": "Jacob Sapoznikow <jacob1coder@gmail.com>",
    "license": "MIT",
    "private": false,
    "type": "commonjs",
    "devDependencies": {
        "@node-minify/core": "^6.2.0",
        "@node-minify/google-closure-compiler": "^6.2.0",
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "husky": "^7.0.4",
        "nodemon": "^2.0.15",
        "prettier": "2.5.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "adm-zip": "^0.5.9",
        "axios": "^0.24.0",
        "fs": "^0.0.1-security",
        "path": "^0.12.7",
        "redis": "^4.0.2",
        "tar": "^6.1.11"
    },
    "scripts": {
        "start": "ts-node index.ts",
        "build": "yarn format && yarn fix && yarn clean && tsc -p . && node scripts/minify.js",
        "dev": "nodemon index.ts",
        "format": "prettier --write .",
        "fcheck": "prettier --check .",
        "clean": "rimraf dist min",
        "lint": "eslint . --ext .ts",
        "fix": "eslint . --ext .ts --fix",
        "start:prod": "yarn build && node dist/index.js",
        "test": "yarn build && ts-node test/index.ts"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && yarn fix",
            "pre-push": "yarn clean && yarn check && echo \"Fixing...\" && yarn format && yarn lint && echo \"Fixing...\" && yarn fix && yarn build"
        }
    },
    "publishConfig": {
        "registry": "https://npm.nosadnile.net/"
    }
}
