{
    "name": "@opendocs/redis-json",
    "version": "1.0.0",
    "description": "A client-side JSON saver and parser for Redis",
    "main": "dist/index.js",
    "repository": "https://git.nosadnile.net/opendocs/redis-json",
    "author": "Jacob Sapoznikow <jacob1coder@gmail.com>",
    "license": "MIT",
    "private": false,
    "devDependencies": {
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "husky": "^7.0.4",
        "nodemon": "^2.0.15",
        "prettier": "2.5.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "redis": "^4.0.2"
    },
    "scripts": {
        "start": "ts-node index.ts",
        "build": "yarn clean && tsc -p .",
        "dev": "nodemon index.ts",
        "format": "prettier --write .",
        "check": "prettier --check .",
        "clean": "rimraf dist",
        "lint": "eslint . --ext .ts,.js",
        "fix": "eslint . --ext .ts,.js --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && yarn fix",
            "pre-push": "yarn clean && yarn check && echo \"Fixing...\" && yarn format && yarn lint && echo \"Fixing...\" && yarn fix && yarn build"
        }
    }
}
