{
    "compilerOptions": {
        "module": "esnext",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": ["es2021", "dom"],
        "outDir": "dist",
        "types": ["node"],
        "baseUrl": ".",
        "strict": true,
        "resolveJsonModule": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es2021",
        "declaration": true
    },
    "exclude": ["node_modules", "**/*.test.*", "test/**/*", "test/*"]
}
